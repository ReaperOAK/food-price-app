# Location API redirects
RewriteEngine On

# Location API routes
RewriteRule ^location/get_states\.php$ location/index.php?action=states [L,QSA]
RewriteRule ^location/get_cities\.php$ location/index.php?action=cities [L,QSA]
RewriteRule ^location/get_states_and_cities\.php$ location/index.php?action=all [L,QSA]
RewriteRule ^location/get_state_for_city\.php$ location/index.php?action=stateForCity [L,QSA]
RewriteRule ^location/add_state_city\.php$ location/index.php?action=add [L,QSA]
RewriteRule ^location/remove_state_city\.php$ location/index.php?action=remove [L,QSA]

# Rates API routes
RewriteRule ^rates/get_latest_rates\.php$ rates/index.php?action=latest [L,QSA]
RewriteRule ^rates/get_special_rates\.php$ rates/index.php?action=special [L,QSA]
RewriteRule ^rates/get_all_rates\.php$ rates/index.php?action=all [L,QSA]
RewriteRule ^rates/get_rates\.php$ rates/index.php?action=cityState [L,QSA]
RewriteRule ^rates/get_average_rates_by_state\.php$ rates/index.php?action=averageByState [L,QSA]
RewriteRule ^rates/update_rate\.php$ rates/index.php?action=update [L,QSA]
RewriteRule ^rates/update_multiple_rates\.php$ rates/index.php?action=updateMultiple [L,QSA]
RewriteRule ^rates/delete_rate\.php$ rates/index.php?action=delete [L,QSA]

# Web Stories routes
RewriteRule ^webstories/generate_web_stories\.php$ webstories/index.php?action=generate [L,QSA]
RewriteRule ^webstories/update_webstory_thumbnails\.php$ webstories/index.php?action=update-thumbnails [L,QSA]
RewriteRule ^webstories/delete_old_webstories\.php$ webstories/index.php?action=cleanup [L,QSA]
RewriteRule ^webstories/generate_webstories_sitemap\.php$ webstories/index.php?action=sitemap [L,QSA]
RewriteRule ^get_web_stories\.php$ webstories/index.php?action=list [L,QSA]

# Scraper routes
RewriteRule ^scraper/update_from_e2necc\.php$ scraper/index.php?action=scrape-e2necc [L,QSA]
RewriteRule ^scraper/daily_update\.php$ scraper/index.php?action=daily-update [L,QSA]
