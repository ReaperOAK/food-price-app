<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
    # Force HTTPS with proper headers and security
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,QSA]
  
  # Remove www with proper headers
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L,QSA]
  
  # Add trailing slash to /webstories
  RewriteRule ^webstories$ webstories/ [R=301,L,QSA]
  
  # Remove trailing slashes except for /webstories/
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !^/webstories/
  RewriteRule ^(.*)/$ /$1 [L,R=301,QSA]
  
  # Handle 3XX redirects properly
  RewriteCond %{HTTP_HOST} ^blogold\.todayeggrates\.com$ [NC]
  RewriteRule ^(.*)$ https://todayeggrates.com/blog/$1 [R=301,L,QSA]
  
  # React Router handling
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Set correct MIME types and force them
<IfModule mod_mime.c>
  RemoveType .css .js .webp .ico .json .webmanifest
  AddType text/css .css
  AddType text/javascript .js
  AddType application/javascript .js
  AddType image/webp .webp
  AddType image/x-icon .ico
  AddType application/json .json
  AddType application/manifest+json .webmanifest

  # Fallback for static files if direct serving fails
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule \.(css|js|webp|ico|json|webmanifest)$ static.php [L]
  
  # Force MIME types
  <FilesMatch "\.(css)$">
    ForceType text/css
  </FilesMatch>
  <FilesMatch "\.(js)$">
    ForceType application/javascript
  </FilesMatch>
</IfModule>

# Add CORS headers for assets
<FilesMatch "\.(css|js|webp|ico|json|webmanifest)$">
  Header set Access-Control-Allow-Origin "*"
  Header set X-Content-Type-Options "nosniff"
</FilesMatch>

# Enable compression
<IfModule mod_deflate.c>
  # Force compression for text files
  SetOutputFilter DEFLATE
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
  
  # Level of compression (0-9)
  DeflateCompressionLevel 9
  
  # Don't compress images
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip dont-vary
</IfModule>

# Browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/xml "access plus 0 seconds"
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
